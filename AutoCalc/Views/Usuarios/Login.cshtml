@model AutoCalc.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DocumentoCPF" class="control-label"></label>
                <input asp-for="DocumentoCPF" class="form-control" />
                <span asp-validation-for="DocumentoCPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-primary" />
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Voltar</a>
            </div>
        </form>

        <h1>Registrar</h1>
        <hr />
        <p>
              <buttom><a class="btn btn-primary" asp-area="" asp-controller="Usuarios" asp-action="Create">Criar Contar</a></buttom>
        </p>
        <h3>@ViewBag.Message</h3>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}