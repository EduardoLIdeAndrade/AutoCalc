@model AutoCalc.Models.Veiculo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Veiculo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ModeloDoVeiculo" class="control-label"></label>
                <input asp-for="ModeloDoVeiculo" class="form-control" />
                <span asp-validation-for="ModeloDoVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlacaDoVeiculo" class="control-label"></label>
                <input asp-for="PlacaDoVeiculo" class="form-control" />
                <span asp-validation-for="PlacaDoVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoDoVeiculo" class="control-label"></label>
                <input asp-for="AnoDoVeiculo" class="form-control" />
                <span asp-validation-for="AnoDoVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Usuarios" asp-action="Login">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
